# Flask Configuration
FLASK_SECRET=your_flask_secret_key_here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
S3_BUCKET=armymarkdown

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# ReCAPTCHA Configuration
RECAPTCHA_PUBLIC_KEY=your_recaptcha_public_key_here
RECAPTCHA_PRIVATE_KEY=your_recaptcha_private_key_here

# Optional: Disable captcha for development
DISABLE_CAPTCHA=false

# Optional: Enable development mode
DEVELOPMENT=true