# Caddyfile - Automatic HTTPS with Let's Encrypt
# Caddy handles SSL certificate provisioning and renewal automatically

{
    # Email for Let's Encrypt notifications
    email admin@armymemomaker.com
}

armymemomaker.com {
    # Reverse proxy to Flask app
    reverse_proxy app:8000 {
        # Health check
        health_uri /health
        health_interval 30s
        health_timeout 5s
    }

    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        # Prevent clickjacking
        X-Frame-Options "DENY"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Remove Server header
        -Server
    }

    # Enable compression
    encode gzip zstd

    # Access logging
    log {
        output stdout
        format console
    }
}

# Redirect www to non-www
www.armymemomaker.com {
    redir https://armymemomaker.com{uri} permanent
}
